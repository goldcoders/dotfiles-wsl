# Profile file. Runs on login. Environmental variables are set here.
# symlink .zprofile to .config/shell/profile
# Adds `~/.local/bin` to $PATH
export PATH="$PATH:$(du "$HOME/.local/bin/" | cut -f2 | tr '\n' ':' | sed 's/:*$//'):$(ruby -e 'puts Gem.user_dir')/bin"

export LANG=en_US.UTF-8
export MANPAGER="/bin/sh -c \"col -b | vim --not-a-term -c 'set ft=man ts=8 nomod nolist noma' -\""

# Default programs:
export EDITOR="nvim"
export BROWSER="google-chrome"
export READER="zathura"
export FILE="ranger"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"


# ~/ Clean-up:
export NOTMUCH_CONFIG="$XDG_CONFIG_HOME/.config/notmuch-config"
export HISTFILE=$HOME/.local/share/history
export LESSHISTFILE="-"
export HISTTIMEFORMAT="[%F %T] "
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export PASSWORD_STORE_DIR="$HOME/.password-store"

# Other program settings:
export FZF_DEFAULT_OPTS="--layout=reverse --height 40%"
export LESS=-R
export LESS_TERMCAP_mb="$(printf '%b' '[1;31m')"
export LESS_TERMCAP_md="$(printf '%b' '[1;36m')"
export LESS_TERMCAP_me="$(printf '%b' '[0m')"
export LESS_TERMCAP_so="$(printf '%b' '[01;44;33m')"
export LESS_TERMCAP_se="$(printf '%b' '[0m')"
export LESS_TERMCAP_us="$(printf '%b' '[1;32m')"
export LESS_TERMCAP_ue="$(printf '%b' '[0m')"

#export QT_QPA_PLATFORMTHEME="gtk2"	# Have QT use gtk2 theme.
#export MOZ_USE_XINPUT2="1"		# Mozilla smooth scrolling/touchpads.
#export _JAVA_AWT_WM_NONREPARENTING=1	# Fix for Java applications in dwm

# AWS config
export AWS_CONFIG_FILE=$XDG_CONFIG_HOME/aws/config
export AWS_PROFILE=default #testing
export AWS_DEFAULT_REGION=us-west-2

export CARGO_HOME=$HOME/.cargo
export CARGO_NET_GIT_FETCH_WITH_CLI=true

export COMPOSER_HOME=$HOME/.config/composer
export COMPOSER_CACHE_DIR=$HOME/.cache/composer

export GIT_ASKPASS=true

export JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
export ANDROID_HOME=$HOME/Applications/android
export SDKTOOLSBIN=$ANDROID_HOME/cmdline-tools/latest/bin
export PLATFORMTOOLs=$ANDROID_HOME/platform-tools
export EMULATORBIN=$ANDROID_HOME/emulator
export ENABLE_FLUTTER_DESKTOP=true

export PYENV_ROOT=$HOME/.pyenv

export STARSHIP_CACHE=$HOME/.config/starship/cache

export ZSH_CACHE_DIR=$HOME/.cache/oh-my-zsh
export ZSH="$HOME/.oh-my-zsh"
export ZSH_CUSTOM=$HOME/.oh-my-zsh/custom


# reverse path if we want to use old dart
# for now we are using the stable dart and flutter
export PATH="$PATH":"$COMPOSER_HOME/vendor/bin"
export PATH="/usr/lib/dart/bin:$HOME/.pub-cache/bin":"$PATH"
export PATH="$PATH":"$SDKTOOLSBIN:$PLATFORMTOOLS"
export PATH="$HOME/fvm/default/bin":"$PATH"
export PATH="$HOME/.cargo/bin:$HOME/.fnm":"$PATH"
export PATH="$PYENV_ROOT/bin:$PATH"

eval "$(pyenv init --path)"

